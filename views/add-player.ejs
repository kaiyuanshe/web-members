<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="/add" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="name" id="name" placeholder="姓名" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="wechat_id" id="wechat-id" placeholder="微信ID" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="nick_name" id="nick-name" placeholder="微信昵称" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="github_name" id="github-name" placeholder="GitHub账号">
                </div>
            </div>
            <% if (type=="member") { %>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="referee1" id="referee1" placeholder="推荐人1" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="referee2" id="referee2" placeholder="推荐人2" required>
                    </div>
                </div>
            <% } %>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <select id="work-group" name="work_group" class="form-control" required>
                        <option selected disabled>选择工作组</option>
                        <option>法律事务工作组</option>
                        <option>基础设施工作组</option>
                        <option>成员发展工作组</option>
                        <option>文案/翻译/设计组</option>
                        <option>媒体组</option>
                        <option>高校合作组</option>
                        <option>社区合作组</option>
                        <option>线下活动组</option>
                        <option>财务组</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                  <textarea class="form-control" name="introduce" id="introduce" placeholder="自我介绍与申请理由" required></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">提交申请</button>
        </form>
    </div>
</div>
</body>
</html>
